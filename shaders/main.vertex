#version 130

in vec3 position;
in vec3 color;
in vec3 normal;

uniform mat4 projection;
uniform mat4 view;
uniform mat4 model;

uniform mat3 normalMatrix;

out vec3 Color;
out vec3 Normal;

void main()
{
	Normal = normalize(normalMatrix * normal);
	Color = color;
	gl_Position = projection * view * model * vec4(position, 1.0);
}
